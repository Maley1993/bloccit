<h1>New Question</h1>

 <div class="row">
   <div class="col-md-8">
     <%= form_for @advertisement do |ad| %>
       <div class="form-group">
         <%= ad.label :title %>
         <%= ad.text_field :title, class: 'form-control', placeholder: "Enter advertisment title" %>
       </div>
       <div class="form-group">
         <%= ad.label :body %>
         <%= ad.text_area :copy, rows: 8, class: 'form-control', placeholder: "Enter advertisement body" %>
       </div>
       <div class="form-group">
         <%= ad.label :price %>
         <%= ad.number_field :price, class: 'form-control', placeholder: 5 %>
       </div>
       <div class="form-group">
         <%= ad.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>
 </div>
